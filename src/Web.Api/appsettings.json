{
  "AllowedHosts": "*",
  "ServerInformation": {
    "Name": "Petopia API",
    "Version": "v2",
    "Description": "Petopia API",
    "Domain": "https://api.ddnhuy.tech/petopia"
  },
  "ConnectionStrings": {
    "Database": "Host=postgres;Port=5432;Database=petopia_production;UserName=postgres;Password=postgres;Include Error Detail=true;"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "ServerUrl": "http://seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Jwt": {
    "Secret": "super-duper-secret-value-that-should-be-in-user-secrets",
    "Issuer": "petopia",
    "Audience": "customer",
    "ExpirationInMinutes": 60
  },
  "EmailSettings": {
    "SmtpServer": "smtp.mailgun.org",
    "SmtpPort": 587,
    "SenderName": "Petopia",
    "SenderEmail": "no-reply@ddnhuy.tech",
    "SenderPassword": "c5f6068055f8f0783985aea7119a004a-7113c52e-10211a97"
  }
}
