{
  "ServerInformation": {
    "Name": "Petopia API",
    "Version": "v2",
    "Description": "Petopia API",
    "Domain": "https://localhost:5001"
  },
  "ConnectionStrings": {
    "Database": "Host=postgres;Port=5432;Database=petopia;UserName=postgres;Password=postgres;Include Error Detail=true;"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "ServerUrl": "http://seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Jwt": {
    "Secret": "super-duper-secret-value-that-should-be-in-user-secrets",
    "Issuer": "clean-architecture",
    "Audience": "developers",
    "ExpirationInMinutes": 60
  },
  "EmailSettings": {
    "SmtpServer": "smtp.mailgun.org",
    "SmtpPort": 587,
    "SenderName": "Petopia",
    "SenderEmail": "postmaster@ddnhuy.tech",
    "SenderPassword": "243a7b57ef7caaa0fea4bd1d206bdb40-7113c52e-4bad7eb8"
  }
}
